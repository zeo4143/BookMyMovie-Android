<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookMyMovie"
        tools:targetApi="31">
        <activity
            android:name=".LanguagesPopUp"
            android:exported="false" />
        <activity
            android:name=".CityListView"
            android:exported="false" />
        <activity
            android:name=".TicketBookedSuccessful"
            android:exported="false" />
        <activity
            android:name=".ChoosePaymentMethod"
            android:exported="true" />
        <activity
            android:name=".SpecificMovieShows"
            android:exported="true" />
        <activity
            android:name=".BookingSummary"
            android:exported="true" />
        <activity
            android:name=".Ticket"
            android:exported="true" />
        <activity
            android:name=".SignIn"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>