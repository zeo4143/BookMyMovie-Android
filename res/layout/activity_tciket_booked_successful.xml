<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".TicketBookedSuccessful">

    <!-- Movie Image -->
    <ImageView
        android:id="@+id/movieImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:src="@drawable/movie1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Successfully Booked"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        />
    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <!-- Successful Booking Message -->


        <!-- Information Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <!-- Movie Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Name: Avengers: Endgame"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <!-- Seat Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat: Row A, Column 1"
                android:textSize="16sp"
                />

            <!-- Cinema Hall -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinema Hall: Hall 1"
                android:textSize="16sp"
                />

            <!-- Price Paid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Paid: $20"
                android:textSize="16sp"
                />

            <!-- Number of Tickets Booked -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Tickets Booked: 2"
                android:textSize="16sp"
                />

            <!-- Scanner Code (Placeholder) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Id: ABC123XYZ"
                android:textSize="16sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button to Homepage -->
    <Button
        android:id="@+id/goToHomepageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Homepage"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        />
</LinearLayout>